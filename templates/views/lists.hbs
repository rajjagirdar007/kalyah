<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/fonts/fonts.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/scss/style.css">
    <link rel="stylesheet" href="/scss/header.css">
    <link rel="stylesheet" href="/scss/sidebar.css">
    <link rel="stylesheet" href="/scss/dashboard.css">
    <title>Keysue</title>
  </head>
  <body>
    <!-- header start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-light navbarCustom">
      <button class="navbar-toggler navbarTogglerCustom" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <a class="navbar-brand m-0 logo" href="#">Keysue</a>

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
		      {{username}}
              </a>
              <div class="dropdown-menu dropdown-menu-lg-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Profile</a>
                <a class="dropdown-item" href="#">Setting</a>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </li>
            <li class="nav-item">
              <div class="userPic">
		      <!--<img src="/scp/html 6/images/feedbackUser.png" />-->
              </div>
            </li>
          </ul>
        </div>
        
          <button class="navbar-toggler userButton" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <div class="userPic">
	      <!--<img src="/scp/html 6/images/feedbackUser.png" />-->
	    </div>
          </button>

          <div class="collapse navbar-collapse-md mobileMenu" id="navbarSupportedContent">
            <ul class="navbar-nav">
		    <li class="nav-item"><a class="nav-link" href="#">{{username}}</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Setting</a></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            </ul>
          </div>
        
    </nav>

    <!-- Sidebar start -->
    <div class="navbar-expand-lg">
      <div class="sidebar collapse navbar-collapse" id="sidebarMenu">
        <a href="#" class="logo">Keysue</a>
        <ul>
          <li class="mb-3"><h3>Categories <span class="float-right">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
              <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z"/>
            </svg></span></h3>
          </li>
        </ul>
      </div>
    </div>

    <!-- Middle start -->
    <div class="middlePartMain">
      <div class="middle">

        <div class="searchPart">
          <div class="input-group">
            <input type="text" id="i" class="form-control inputField" placeholder="Search here...">
            <button type="button" class="btn searchBtn">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
              </svg>
            </button>
          </div>
        </div>

        <div class="mt-4">
          <a href="/passwords/add" class="btn btnPrimary my-2 float-right">Add Password</a>
          <div class="table-responsive customTable">
            <table class="table mb-0">
                <thead>
                  <tr>
                    <th scope="col">Website</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Share</th>
                  </tr>
                </thead>
                <tbody>
		  {{#each row}}
		     <input type="hidden" value="{{{this.username}}}" id="u_{{{this.id}}}">
		     <input type="hidden" value="{{{this.password}}}" id="p_{{{this.id}}}">
		     <input type="hidden" value="{{{this.share}}}" id="s_{{{this.id}}}">
                  <tr class="trCustom">
                    <td valign="middle">
                      <div class="d-flex align-items-center">
                        <div class="tableThumb mr-2"></div>
                        <div class="websiteHead">
				<h5>{{this.website}}</h5>
				<a target="_blank" href="{{{this.link}}}">{{this.link}}</a>
                        </div>
                      </div>
                    </td>
                    <td valign="middle">
                      <div class="d-flex align-items-center">
			      {{this.username}} 
                        <span id="username" data-clipboard-target="#u_{{{this.id}}}" class="btn btn-dark btn-sm" onclick="clickHandler(event, this)" onmouseleave="resetText(event, this, 'username')" class="ml-2 copyIcon" >
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-files" viewBox="0 0 16 16">
                            <path d="M13 0H6a2 2 0 0 0-2 2 2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm0 13V4a2 2 0 0 0-2-2H5a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1zM3 4a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4z"/>
                          </svg>
                        </span>
                      </div>
                    </td>
                    <td valign="middle">
                      <div class="d-flex align-items-center">
                        <span class="passwordText">**********</span>
			<span id="password" data-clipboard-target="#p_{{{this.id}}}" onclick="clickHandler(event, this)" onmouseleave="resetText(event, this, 'password')" class="ml-2 copyIcon">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-files" viewBox="0 0 16 16">
                            <path d="M13 0H6a2 2 0 0 0-2 2 2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm0 13V4a2 2 0 0 0-2-2H5a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1zM3 4a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4z"/>
                          </svg>
                        </span>
                      </div>
                    </td>
                    <td valign="middle">
                      <span id="share" data-clipboard-target="#s_{{{this.id}}}" onclick="clickHandler(event, this)" onmouseleave="resetText(event, this, 'share')" class="menuIcon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                          <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                        </svg>
                      </span>
                    </td>
                  </tr>
		  {{/each}}
                </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>

    <script src="/js/clipboard.min.js"></script>
    <script src="/js/manage.js"></script>

    <script src="/js/jquery.slim.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>









